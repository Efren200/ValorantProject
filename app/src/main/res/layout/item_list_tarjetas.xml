<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvTarjetas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/rojoValorant"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/idImagenTarjeta"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/lblNombreTarjeta"
                android:layout_width="168dp"
                android:layout_height="73dp"
                android:layout_marginLeft="20dp"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/oscuroValorant"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <ImageButton
                android:id="@+id/botonguardaTarjeta"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/rojoValorant"
                android:src="@drawable/guardar" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>